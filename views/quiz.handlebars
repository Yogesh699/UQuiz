<div>
    <h1 class = "title is-1">Choose your quiz</h1>
    <!-- quiz.handlebars -->
    {{#each quizzes as |quiz|}}
        {{> quiz-details}}
    {{/each}}
</div>

<!--quiz builder choosing questions-->
<div>
    <h1 class = "title is-1">Build own quiz</h1>
    <form>
        <div class="field has-addons">
            <div class="control is-expanded">
                <div class="select is-fullwidth">
                <select name="category">
                    {{#each questionDetail as |questionDetails| }}
                    <option value="{{questionDetail.category_name}}">{{questionDetail.category_name}}</option>
                    {{/each}}
                </select>
                </div>
            </div>
            <div class="control">
                <button type="submit" class="button is-primary">Choose</button>
            </div>
        </div>
</div>



