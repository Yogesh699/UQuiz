
<main  style="background-color:#FFDF00;">

        <h1 class="is-full has-text-centered" style="font-weight: 500; font-size: 350%;">Quiz {{id}}</h1>
        <h2>These handlebars expressions work:</h2>
        <ul>
            <li>id, {{id}}</li>
            <li>user_id, {{user_id}}</li>
            <li>questions.[0].question_body, {{questions.[0].question_body}}</li>
            {{#each questions as |question|}}
            <li>question.question_body {{question.question_body}}</li>
            <li>question.category_id {{question.category_id}}</li>
            {{/each}}
            <li>user_id, {{user_id}}</li>
            <li>questions.[0].created_by_user_id, {{questions.[0].created_by_user_id}}</li>
            <li>questions.[0].category_id, {{questions.[0].category_id}}</li>
            

        </ul>

        <section>
            <div class="card pb-6 pt-6" id="quiz-home">
                <div class="columns card-content is-justify-content-center">
   
                    <button class="button  is-large is-responsive" id="start-button" style="background-color: #D40000; color: #FFDF00">START QUIZ</button>

                </div>
            </div>
        </section>

        <section>
            <div class="card" id="quiz-question-set">

                <div class="card-header" >
                    <h1 class="card-header-title" id="question-body"></h1>
                    <h2 id="question-creator"></h2>
                </div>

                <div class="card-content">
                    <h3>Select your answer:</h3>
                    <div class="subtitle is-3" id="choice-list">
                        <label class="radio">
                            <input type="radio" name="choice" id="radio-value-a" defaultChecked="false">
                        <span id="choice-a"></span>
                        </label>
                        <br>
                        <label class="radio">
                            <input type="radio" name="choice" id="radio-value-b" defaultChecked="false">
                            <span id="choice-b"></span>
                        </label>
                        <br>
                        <label class="radio">
                            <input type="radio" name="choice" id="radio-value-c" defaultChecked="false">
                            <span id="choice-c"></span>
                        </label>
                        <br>
                        <label class="radio">
                            <input type="radio" name="choice" id="radio-value-d" defaultChecked="false">
                            <span id="choice-d"></span>
                        </label>
                    </div>   
                </div>

                <div class="card-footer is-justify-content-space-between">
                    <div class="block card-footer-item" id="message-element"></div> 
                    <br>
                    <button class="button card-footer-item is-large is-responsive" value="Submit" id="submit-button" style="background-color: #D40000; color: #FFDF00">SUBMIT ANSWER</button>
                    <button class="button card-footer-item is-large is-responsive" id="next-button" style="background-color: #D40000; color: #FFDF00">NEXT</button>
                </div>
        </section>

        <section>
            <div class="card pb-6 pt-6" id="game-over-screen">            
                <div class="columns card-content is-justify-content-center">
                <h1>You're finished! </h1>
                <br>
                <p>Your score for Quiz {{quizPage.id}} is <span id="final-score"></span>.</p>
                </div>
                <div class="card-footer is-justify-content-center">
                    <button class="button  is-large is-responsive" id="save-score" style="background-color: #D40000; color: #FFDF00">SAVE SCORE</button>
                    <button class="button is-large is-responsive" id="return-home" style="background-color: #D40000; color: #FFDF00">RETURN TO QUIZZES</button>
                </div>
            </div>
        </section>
        
        <section>
            <div class="card" id="scoreboard-screen">
                <div class="card-header">
                    <div class="card-header-title">SCOREBOARD</div>
                </div>

                <div class="card-content is-justify-content-center">

                    <div class="table-container">
                        <table class="table is-striped is-hoverable is-fullwidth">
                            <thead>
                                <tr>
                                    <th>Username</th>
                                    <th>Score</th>
                                </tr>
                            </thead>
                            <tbody id="score-board-element">
                                <tr>
                                    <td>Example username</td>
                                    <td>Example score</td>

                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer is-justify-content-center">
                    <button class="button  is-large is-responsive" style="background-color: #D40000; color: #FFDF00">
                        <a href="/quiz">RETURN TO QUIZZES</a>
                    </button>
                </div>
            </div>
        </section>
    </div>
</main>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="/js_1/quiz.js"></script>

