<div>
    <h1 class = "title is-1">Choose a premade random quiz</h1>
    <!-- quiz.handlebars -->
    {{#each quizzes as |quiz|}}
    {{log quiz "response from route"}}
    <button class="button is-large is-responsive" style="background-color: #D40000; color: #FFDF00">
        <a href="/quiz/{{quiz.id}}">{{quiz.id}}</a>
    </button>
    {{/each}}
</div>

<!--quiz builder choosing questions-->
<div>
    <h1 class = "title is-1">Build own quiz by category or creator {{category.category_name}}</h1>
    <form>
        <div class="field has-addons">
            <div class="control is-expanded">
                <div class="select is-fullwidth">
                <select name="category">
                    {{quiz.questions.category.category_name}}
                    <h2>{{category.category_name}}</h2>
                    {{!-- <option value="{{category.category_name}}">{{category.category_name}}</option> --}}
                    
                </select>
                </div>
            </div>
            <div class="control">
                <button type="submit" class="button is-primary">Choose</button>
            </div>
        </div>
    </form>
</div>



