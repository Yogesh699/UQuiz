

<main>
    <section>
        <div class="block" id="quiz-home">
            <h1>Welcome to Quiz number {{id}}!</h1>
            <h2>Click START to begin.</h2>
            
            <button class="button" id="start-button">START QUIZ</button>
        </div>
    </section>

    <section>
        <div class="block" id="quiz-question-set">
            <h1 id="question-body"></h1>
            <h2 id="question-creator"></h2>
            <div>
                <label>Select your answer:</label>
                <div class="subtitle is-3" id="choice-list">
                    <label class="radio">
                        <input type="radio" name="choice">
                    <span id="choice-a"></span>
                    </label>
                    <br>
                    <label class="radio">
                        <input type="radio" name="answer">
                        <span id="choice-b"></span>
                    </label>
                    <br>
                    <label class="radio">
                        <input type="radio" name="answer">
                        <span id="choice-c"></span>
                    </label>
                    <br>
                    <label class="radio">
                        <input type="radio" name="answer">
                        <span id="choice-d"></span>
                    </label>
                    <button class="button" id="submit-button">SUBMIT ANSWER</button>
                    <button class="button" id="next-button">NEXT</button>
                </div>
            </div>
            <div>The correct answer is: <span id="check-answer"></span>
            </div> 
        </div>
    </section>
    

    <section>
        <div class="block" id="game-over-screen">
            <h1>You're finished!</h1>
            <p>Your score for Quiz # {{id}} is <span id="final-score"></span></p>.
        </div>
    </section>
</main>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="/js_1/quiz.js"></script>

