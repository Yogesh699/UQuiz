<div class="row">
  <div class="col-auto">
    <h2>Welcome to UQuiz, {{username}}!</h2>
  </div>
</div>
<div class="card" id = "leaderboard">
    <h3>Leaderboard</h3>
  <div class="table-container">
    <table class="table">
     <!-- Your table content -->
    </table>
  </div>
</div> 

 <div id = "submitQuestion">
   <h3>Submit a question and answer</h3>
   <div class="field has-addons">
     <div class="field-label is-normal">
       <label class="label">Select the Question Category</label>
     </div>
     <div class="control is-expanded">
       <div class="select is-fullwidth">
         <select name="questionCategory">
          <option value="CurrentAffairs">Current Affairs</option>
          <option value="TheArts">The Arts</option> <!-- from categorySeedData? -->
          <option value="Sports">Sports</option>
          <option value="Entertainment">Entertainment</option>
          <option value="Movies">Movies</option>
          <option value="Politics">Politics</option>
          <option value="Music">Music</option>
          <option value="History">History</option>
          <option value="Geography">Geography</option>
         </select>
       </div>
      </div>
   </div>
   <div class="control">
    <!-- Choose button necessary? -->
     <button type="submit" class="button is-primary">Choose</button>
   </div>

   <div class="field">
    <div class="control">
     <input class="input is-normal" type="text" placeholder="Enter the Question">
     <input class="input is-normal" type="text" placeholder="Enter the Answer">
     <input class="input is-normal" type="text" placeholder="Enter Choice A">
     <input class="input is-normal" type="text" placeholder="Enter Choice B">
     <input class="input is-normal" type="text" placeholder="Enter Choice C">
     <input class="input is-normal" type="text" placeholder="Enter Choice D">
    </div>
   </div>
   <div class="file">
     <label class="file-label">
      <input class="file-input" type="file" name="quizImage">
       <span class="file-cta">
         <span class="file-icon">
          <i class="fas fa-upload"></i>
         </span>
         <span class="file-label">
          Choose a fileâ€¦
         </span>
       </span>
     </label>
   </div>
    <div class="field is-grouped">
     <p class="control">
       <a class="button is-primary">Submit</a>
     </p>
    </div>
  </div>

<div id = "playUQuiz">
    <button id = "playuquiz" type="button">Play UQuiz</button>
</div>

