

<main>
    <section>

        <div class="block" id="quiz-home">
            <h1>Welcome to Quiz number {{id}}!</h1>
            <h2>Click START to begin.</h2>
            <button class="button" id="start-quiz">START QUIZ</button>
        </div>

    </section>

    <section class="block" id="quiz-question">
    
    <header>
        <li>QUESTION NUMBER: </li>
        <li>CREATOR ID: </li>
    </header>
        <section>
            <label>Select your answer:</label>
            <div class="subtitle is-3">
                <label class="radio">
                    <input type="radio" name="choice">
                   A <span id="choice-a"></span>
                </label>
                <br>
                <label class="radio">
                    <input type="radio" name="answer">
                    B <span id="choice-b"></span>
                </label>
                <br>
                <label class="radio">
                    <input type="radio" name="answer">
                    C <span id="choice-c"></span>
                </label>
                <br>
                <label class="radio">
                    <input type="radio" name="answer">
                    D <span id="choice-d"></span>
                </label>
            </div>
            <div>The correct answer is: <span id="answer"></span> 
            </div>
        </section>
    

        <section class="block">
            <div class="container" id="game-over">
                <h1>You're finished!</h1>
                <p>Your score for Quiz # {{id}} is <span id="final-score"></span></p>.
            </div>
        </section>
</main>

    </div>
 
</section>
