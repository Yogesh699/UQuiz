
<main style="background-color:#FFDF00; height: 100vh">
    <section>
        <div id="quiz-home">
            <h1 style="font-weight: 500; font-size: 350%; padding-bottom: 10px">Welcome to Quiz number {{id}}!</h1>

            <h2>Click START to begin.</h2>
            <button class="button" id="start-button" style="background-color: #D40000; color: #FFDF00">START QUIZ</button>

        </div>
    </section>

    <section>
        <div id="quiz-question-set">
            <h1 id="question-body"></h1>
            <h2 id="question-creator"></h2>
            <div>
                <label>Select your answer:</label>
                <div class="subtitle is-3" id="choice-list">
                    <label class="radio">
                        <input type="radio" name="choice" id="radio-value-a" defaultChecked="false">
                    <span id="choice-a"></span>
                    </label>
                    <br>
                    <label class="radio">
                        <input type="radio" name="choice" id="radio-value-b" defaultChecked="false">
                        <span id="choice-b"></span>
                    </label>
                    <br>
                    <label class="radio">
                        <input type="radio" name="choice" id="radio-value-c" defaultChecked="false">
                        <span id="choice-c"></span>
                    </label>
                    <br>
                    <label class="radio">
                        <input type="radio" name="choice" id="radio-value-d" defaultChecked="false">
                        <span id="choice-d"></span>
                    </label>
                    <button class="button" value="Submit" id="submit-button" style="background-color: #D40000; color: #FFDF00">SUBMIT ANSWER</button>
                    <button class="button" id="next-button" style="background-color: #D40000; color: #FFDF00">NEXT</button>
                </div>
            </div>
            <div class="block" id="message-element"></div>

        </div>
    </section>
    

    <section>
        <div id="game-over-screen">
            <h1>You're finished!</h1>
            <p>Your score for Quiz # {{id}} is <span id="final-score"></span></p>.
        </div>
    </section>
</main>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="/js_1/quiz.js"></script>

